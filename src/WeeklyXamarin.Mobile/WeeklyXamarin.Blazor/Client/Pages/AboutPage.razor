@page "/About"

<h2>Settings</h2>
<Frame>
    <div class="theme-switch-wrapper">
        <label class="theme-switch" for="checkbox">
            <input checked="@IsDarkMode" @onchange="@ThemeSwitchChanged" type="checkbox" id="checkbox" />
            <div class="slider round"></div>
        </label>
        <em>Enable Dark Mode!</em>
    </div>
</Frame>

<h2>Libraries Used</h2>
<Frame>
    <CollectionView ItemsSource="@ViewModel.Libraries">
        <a class="link-item" target="_blank" href="@context.Url">@context.Text</a>
    </CollectionView>
</Frame>

<h2>About</h2>
<Frame>
    <CollectionView ItemsSource="@ViewModel.AboutLinks">
        <a class="link-item" target="_blank" href="@context.Url">@context.Text</a>
    </CollectionView>
</Frame>

<h2>Contributors</h2>
<Frame>
    <div class="flex-collection">

        <CollectionView ItemsSource="@ViewModel.Contributors">
            <a class="contributor" target="_blank" href="@context.ProfileUrl"> <img class="rounded-circle avatar" src="@context.ImageUrl" /><p >@context.Name</p> </a>
        </CollectionView>
    </div>
</Frame>

<h2>Viewers</h2>
<Frame>
    <div class="flex-collection">

        <CollectionView ItemsSource="@AcknowledgementsViewModel.Acknowledgements">
            <p class="viewer">@context.Person (@context.Activity)</p>
        </CollectionView>
    </div>

</Frame>

